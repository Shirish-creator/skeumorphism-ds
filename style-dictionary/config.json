{
  "source": ["./style-dictionary/token-studio/transformed-tokens.json"],
  "platforms": {
    "css": {
      "transformGroup": "css",
      "buildPath": "./src/style-dictionary-dist/",
      "files": [
        {
          "destination": "styles.css",
          "format": "css/variables",
          "options": {
            "outputReferences": true,
            "parent": false
          }
        }
      ]
    }
  },
  "log": {
    "verbosity": "verbose" 
  }
}